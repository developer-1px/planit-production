@import core
@import colors

*
  margin 0
  padding 0


[hidden]
  display none !important


[blog]
  img
    display block
    min-width calc(100% + 64px)
    max-width calc(100% + 64px)
    height auto
    margin 0 -32px

  iframe
    display block
    width calc(100% + 64px)
    margin 0 -32px

  img:hover,
  iframe:hover
    outline 2px solid #84d300
    box-shadow 0 0 4px rgba(0, 0, 0, .2)
    cursor pointer
    opacity 0.8

[mode="mobile"]
  max-width: 375px !important;

[mode="desktop"]
  max-width: 512px !important;


gp-post-gallery
  display: block

// ------ 블로그 에디트 -----
section#toolbar
  ui-btn-group
    display block
    width 100%
    height 100%
    padding 15px 0
    margin-left -6px
    hbox()

    ui-btn
      font-size 14px
      padding 5px 7px
      color $btn-group-btn-color
      svg-icon svg #Icon

      svg-icon svg #btn-order
        fill @color

      > div
        hbox()

      svg-icon
        margin-right 5px

      &:hover
        font-size 14px
        color $btn-group-btn-color-strong
        svg-icon svg #Icon

        svg-icon svg #btn-order
          fill @color

      &[strong]
        font-size 18px
        color $btn-group-btn-color-strong
        svg-icon svg #Icon

        svg-icon svg #btn-order
          fill @color

      &[disabled]
        color $btn-group-btn-color-disabled
        svg-icon svg #Icon

        svg-icon svg #btn-order
          fill @color

  .toolbar-divider
    height 100%
    border-left 1px solid $border
    margin 0 15px

[edit-aside]
  width 200px
  height 100%
  background #fff
  border-left 1px solid $border
  white-space normal

  h1
    font-size 18px
    padding 16px 22px
    border-bottom 1px solid $border

  [edit-aside-menu]
    padding 18px 6px

    div
      min-height 26px
      padding 3px 16px

    div:hover
      color $edit-aside-menu-hover-color
      background-color $edit-aside-menu-hover-bg