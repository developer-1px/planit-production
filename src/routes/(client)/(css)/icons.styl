@import core


i[icon]
  display block

  &[icon="arrow-left"]
    width 32px
    height 32px
    background-image url('/img/icon-btn-back.svg')
    background-size 32px 32px
    background-repeat no-repeat

  &[icon="arrow-right"]
    width 32px
    height 32px
    background-image url('/img/icon-btn-forward.svg')
    background-size 32px 32px
    background-repeat no-repeat
